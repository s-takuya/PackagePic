<%= form_for @posting do |f| %>
  <% if @posting.errors.any? %>
    エラーメッセージ
  <% end %>

  <%= f.fields_for :photo, @posting.build_photo do |ph| %>
    <div class='form-group post_image'>
      <i class='fa fa-camera' aria-hidden='true'></i><%= ph.label :image, '写真を選ぼう' %>
      <%= ph.file_field :image %>
    </div>
  <% end %>

  <div class='form-group body'>
    <%= f.label :body, '解説' %>
    <%= f.text_area :body, class: 'form-control', rows: 6, placeholder: '例文' %>
  </div>

  <div class='form-group category'>
    <%= f.label :category, 'カテゴリ' %>
    <%= f.select :category, options_for_select(Posting::CATEGORY_HASH.invert), class: 'form-control' %>
  </div>

  <div class='form-group actions submit text-center'>
    <%= f.submit '投稿', class: 'btn btn-default' %>
  </div>
<% end %>
